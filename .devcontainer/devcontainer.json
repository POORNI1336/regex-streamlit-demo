{
    "name": "Python Streamlit Regex Tester",
    // Use a robust image with Python pre-installed
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    
    "customizations": {
        "codespaces": {
            // Automatically open the main files when the Codespace starts
            "openFiles": [
                "README.md",
                "app.py"
            ]
        },
        "vscode": {
            "settings": {},
            "extensions": [
                // Essential extensions for Python development
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },

    // Command to run after the container content is created (to install dependencies)
    "postCreateCommand": "pip3 install --user streamlit",
    // OR, if you use a requirements.txt file:
    // "postCreateCommand": "pip3 install --user -r requirements.txt",

    // Command to run every time you attach to the container (to start the app)
    "postAttachCommand": {
        "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
    },

    // Define port attributes for the Streamlit default port (8501)
    "portsAttributes": {
        "8501": {
            "label": "Streamlit App",
            "onAutoForward": "openPreview"
        }
    },
    
    // Automatically forward the Streamlit port
    "forwardPorts": [
        8501
    ]
}
